# Production Environment Configuration for Pi Network Mainnet
# SECURITY WARNING: This file contains example values only
# Copy to .env and replace with your actual credentials
# NEVER commit real API keys to version control

# Pi Network Configuration (Mainnet Production)
VITE_PI_NETWORK=mainnet
VITE_API_URL=https://api.minepi.com
VITE_DOMAIN=droplink.space
VITE_PI_SDK_URL=https://sdk.minepi.com/pi-sdk.js

# Pi Network API Keys (Production)
# SECURITY: Replace these example values with your real keys
VITE_PI_API_KEY=your_pi_api_key_here_do_not_expose_real_keys
VITE_PI_VALIDATION_KEY=your_pi_validation_key_here_do_not_expose_real_keys

# Pi Network Features
VITE_PI_SANDBOX_MODE=false
VITE_PI_MAINNET_MODE=true

# Backend payment flow (recommended true)
VITE_PI_USE_BACKEND=true
# Optional override for Lovable Cloud edge functions endpoint
VITE_SUPABASE_FUNCTIONS_URL=https://your-lovable-project.supabase.co/functions/v1

# Server-side secrets for Supabase Edge Functions (do not expose in frontend)
# Set these in Supabase secrets, not in client-side env:
# PI_API_KEY=...
# PI_VALIDATION_KEY=...
# PI_SANDBOX_MODE=true
VITE_PI_AUTHENTICATION_ENABLED=true
VITE_PI_PAYMENTS_ENABLED=true
VITE_PI_AD_NETWORK_ENABLED=true
VITE_PI_WALLET_DETECTION_ENABLED=true
VITE_PI_TOKEN_DETECTION_ENABLED=true

# Pi Ad Network Configuration
VITE_PI_REWARDED_ADS_ENABLED=true
VITE_PI_INTERSTITIAL_ADS_ENABLED=true
VITE_PI_AD_FREQUENCY_CAP=3
VITE_PI_AD_COOLDOWN_MINUTES=5

# Pi Payment Configuration
VITE_PI_MIN_PAYMENT_AMOUNT=0.01
VITE_PI_MAX_PAYMENT_AMOUNT=10000
VITE_PI_PAYMENT_CURRENCY=PI
VITE_PI_PAYMENT_MEMO_ENABLED=true

# Pi Blockchain Configuration
VITE_PI_NETWORK_PASSPHRASE=Pi Mainnet
VITE_PI_HORIZON_URL=https://api.minepi.com
VITE_PI_STELLAR_HORIZON_URL=https://horizon.stellar.org

# Droppay configuration
DROPPAY_BASE_URL="https://droppay.space/api/v1"
DROPPAY_API_KEY=""
# Authorization scheme: typically "Key" or "Bearer"
DROPPAY_AUTH_SCHEME="Key"
# Optional webhook secret for signature verification
DROPPAY_WEBHOOK_SECRET=""
# DROP Token Configuration
VITE_DROP_ISSUER=GBVTV77XFMDYSSVIG6ZGSRAGZ3S7KA4275YYLOLIROOD3Y3F3TH5U3EI
VITE_DROP_DISTRIBUTOR=GCTPMH43NGN7E4IXLQ27H2XWGGWWDY3I6UAPBFXYQSEUPEKNQE2BZXC2
VITE_DROP_CODE=DROP
